<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav w-100 justify-content-between">
        <form class="form-inline">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </form>

        <% if (username) { %>
          <form class="form-inline" action="/urls/logout" method="POST">
            <p class="mr-1">Logged in as: <%= username %></p>
            <button type="submit" class="btn btn-outline-danger">Logout</button>
          </form>
        <% } else { %>
          <form class="form-inline" action="/urls/login" method="POST">
            <input
              class="form-control mr-sm-2"
              type="text"
              name="username"
              placeholder="Username"
              style="width: 200px; margin: 1em"
            />
            <button type="submit" class="btn btn-outline-dark">Login</button>
          </form>
       <% } %>

        
      </div>
    </div>
  </nav>
</header>
